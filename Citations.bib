@article {Lai2152,
	author = {Lai, Yu-Ting and Yeung, Carol K. L. and Omland, Kevin E. and Pang, Er-Li and Hao, Yu and Liao, Ben-Yang and Cao, Hui-Fen and Zhang, Bo-Wen and Yeh, Chia-Fen and Hung, Chih-Ming and Hung, Hsin-Yi and Yang, Ming-Yu and Liang, Wei and Hsu, Yu-Cheng and Yao, Cheng-Te and Dong, Lu and Lin, Kui and Li, Shou-Hsien},
