  doi = {10.1111/evo.12346},
  interhash = {de8da528ec890ad56219318997007ff4},
  intrahash = {2fc5441123efde122ea2935034fa2687},
  issn = {1558-5646},
  journal = {Evolution},
  keywords = {Fishers_geometric_model ecological_speciation incompatibilities niche_dimension segregation_variance speciation},
  number = 5,
  pages = {1244--1256},
  timestamp = {2018-01-20T01:18:32.000+0100},
  title = {Niche dimensionality and the genetics of ecological speciation
},
