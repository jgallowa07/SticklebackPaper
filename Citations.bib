  interhash = {d123b83258458bfb865d2f7a2f41753c},
  intrahash = {279bd552a48922d68e15af2b26fa735c},
  journal = {Molecular Biology and Evolution},
  keywords = {SLiM methods simulation software},
  pages = {msy228},
  timestamp = {2018-12-08T21:50:45.000+0100},
  title = {{SLiM} 3: {Forward} genetic simulations beyond the {Wright}-{Fisher} model},
  url = {http://dx.doi.org/10.1093/molbev/msy228},
  year = 2018
}

