  interhash = {cb4fe711301e7a1ab2c14f7595e29542},
  intrahash = {5507e5bf740c436ee193f91c5dca330b},
  journal = {Molecular Ecology},
  keywords = {Fishers_geometric_model dominance haldanes_rule hybrid_filter hybrid_zone hybrids speciation stabilizing_selection},
  number = 3,
  pages = {551-568},
  timestamp = {2018-01-20T05:24:11.000+0100},
  title = {The role of hybridization in evolution},
